---
interface Props {
  title: string;
}

const { title } = Astro.props;

import Layout from "./layout.astro";
import MenuIndex from "../components/menu-index.astro";
---
<Layout title={title}>
	<MenuIndex></MenuIndex>
	<div class="form">
        <slot />
    </div>
</Layout>

<style>
    body{
        /* Auto layout */
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 64px;

        width: 100%;
        background-color: var(--primary-300);
        padding-bottom: 64px;

        /* background: url("../../public/images/Inicio/fondo_LR.png");
        background-repeat: no-repeat;
        background-size: cover; */
    }

    .form{
        /* Auto layout */
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 48px 80px;
        gap: 48px;

        background: var(--light);
        box-shadow: 0px 6px 14px rgba(121, 126, 135, 0.5);
        border-radius: 16px;

    }
</style>